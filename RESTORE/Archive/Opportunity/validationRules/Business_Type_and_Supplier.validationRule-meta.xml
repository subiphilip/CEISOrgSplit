<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Business_Type_and_Supplier</fullName>
    <active>true</active>
    <errorConditionFormula>AND(

 TEXT( Business_Type__c ) = &quot;Demand Response&quot;
,
ISBLANK(TEXT(Supplier__c))
)</errorConditionFormula>
    <errorDisplayField>Supplier__c</errorDisplayField>
    <errorMessage>Oppt08: Demand Response business must have a Supplier selected.</errorMessage>
</ValidationRule>
