<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Account_Name_Validation_CEIP</fullName>
    <active>true</active>
    <description>Validates the Account field is populated</description>
    <errorConditionFormula>AND(ISBLANK(Account.Name),RecordType.Name = &quot;CEIP&quot;)</errorConditionFormula>
    <errorDisplayField>AccountId</errorDisplayField>
    <errorMessage>Account is required for CEIP Opportunities.</errorMessage>
</ValidationRule>
