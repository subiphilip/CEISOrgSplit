<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Choice_Validation</fullName>
    <active>true</active>
    <errorConditionFormula>and(Choice__c =true,  ISPICKVAL(Reward_Type__c , &quot;Reward Program&quot;))</errorConditionFormula>
    <errorDisplayField>Reward_Type__c</errorDisplayField>
    <errorMessage>Reward05: If this reward is a Choice, the Type cannot be &quot;Reward Program.&quot;</errorMessage>
</ValidationRule>
