    <rules>
        <fullName>Bill Past Due</fullName>
        <actions>
            <name>Bill_Past_Due</name>
            <type>Alert</type>
        </actions>
        <active>false</active>
        <formula>AND(Due_Date__c  &lt; TODAY(),  Paid__c = FALSE)</formula>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
        <workflowTimeTriggers>
            <actions>
                <name>Bill_30_days_past_due</name>
                <type>Alert</type>
            </actions>
            <offsetFromField>Billing_Documents__c.Due_Date__c</offsetFromField>
            <timeLength>30</timeLength>
            <workflowTimeTriggerUnit>Days</workflowTimeTriggerUnit>
        </workflowTimeTriggers>
    </rules>
    <rules>
        <fullName>Billing Procedures</fullName>
        <active>false</active>
        <booleanFilter>1 AND 2 AND 3 AND 4 AND 5</booleanFilter>
        <criteriaItems>
            <field>Billing_Documents__c.Paid__c</field>
            <operation>equals</operation>
            <value>False</value>
        </criteriaItems>
        <criteriaItems>
            <field>Billing_Documents__c.Void__c</field>
            <operation>equals</operation>
            <value>False</value>
        </criteriaItems>
        <criteriaItems>
            <field>Billing_Documents__c.Type__c</field>
            <operation>notEqual</operation>
            <value>Credit Memo,Short-Pay Adjustment</value>
        </criteriaItems>
        <criteriaItems>
            <field>Billing_Documents__c.RecordTypeId</field>
            <operation>equals</operation>
            <value>TrueCost Billing Document</value>
        </criteriaItems>
        <criteriaItems>
            <field>Billing_Documents__c.Amount__c</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
        <workflowTimeTriggers>
            <actions>
                <name>Bill_Reminder_20_days</name>
                <type>Alert</type>
            </actions>
            <offsetFromField>Billing_Documents__c.Billing_Date__c</offsetFromField>
            <timeLength>20</timeLength>
            <workflowTimeTriggerUnit>Days</workflowTimeTriggerUnit>
        </workflowTimeTriggers>
        <workflowTimeTriggers>
            <actions>
                <name>Bill_Past_Due</name>
                <type>Alert</type>
            </actions>
            <offsetFromField>Billing_Documents__c.Billing_Date__c</offsetFromField>
            <timeLength>30</timeLength>
